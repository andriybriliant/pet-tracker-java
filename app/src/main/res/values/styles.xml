<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Customize background, title text, buttons, etc. -->
        <item name="android:background">@color/background</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:buttonBarButtonStyle">@style/CustomDialogButton</item>
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDatePicker" parent="Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:headerMonthTextAppearance">@color/text_color_primary</item>
        <item name="android:weekDayTextAppearance">@color/text_color_primary</item>
        <item name="android:calendarTextColor">@color/text_color_primary</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:background">@color/background</item>
    </style>


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/secondary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

</resources>